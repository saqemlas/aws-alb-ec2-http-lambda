{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": [
      "node_modules/@types",
      "services/ec2/node_modules/@types",
    ]
  },
  "include": [
    "services"
  ],
  "exclude": [
    "node_modules",
    "services/ec2/node_modules"
  ]
}
